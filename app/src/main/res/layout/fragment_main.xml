<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/task_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_playlist_add_check_black_24dp"
                        android:contentDescription="task icon" />

                    <TextView
                        android:id="@+id/task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_title"
                        android:textStyle="bold"
                        android:textColor="@color/primaryText"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:layout_toEndOf="@+id/task_image" />

                    <TextView
                        android:id="@+id/date_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        android:layout_below="@+id/task_title"
                        android:layout_toEndOf="@id/task_image" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/task_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/secondaryText"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_margin="8dp">

                    <Button
                        android:id="@+id/learn_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorAccent"
                        android:text="@string/learn_btn"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        style="?android:attr/buttonBarButtonStyle" />

                    <Button
                        android:id="@+id/setting_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/setting_btn"
                        android:background="@android:color/transparent"
                        style="?android:attr/buttonBarButtonStyle" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/words_book_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_header"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/memoBook_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Words Book's Name"
                    android:textSize="16sp"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:layout_below="@+id/words_book_image" />

                <TextView
                    android:id="@+id/memoBook_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Words Book Description"
                    android:textSize="16sp"
                    android:textColor="@color/secondaryText"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@+id/memoBook_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:gravity="end"
                    android:layout_below="@+id/memoBook_subtitle">

                    <Button
                        android:id="@+id/allMemoBooks_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_book_btn"
                        android:textColor="@color/secondaryText"
                        android:background="@android:color/transparent"
                        style="?android:attr/buttonBarButtonStyle" />
                </LinearLayout>

                <com.getbase.floatingactionbutton.FloatingActionsMenu
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/memoBook_subtitle"
                    android:layout_alignEnd="@+id/words_book_image"
                    android:layout_marginTop="-28dp"
                    app:fab_addButtonColorNormal="@color/colorAccent"
                    app:fab_addButtonColorPressed="@color/colorAccentDark"
                    app:fab_addButtonPlusIconColor="@android:color/white"
                    app:fab_labelStyle="@style/menu_labels_style">

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/note_add_fab"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@mipmap/ic_note_add_white_18dp"
                        app:fab_size="mini"
                        app:fab_title="Add A Note"
                        app:fab_colorNormal="@color/colorAccent"
                        app:fab_colorPressed="@color/colorAccentDark" />

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/lib_add_fab"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@mipmap/ic_library_add_white_18dp"
                        app:fab_size="mini"
                        app:fab_title="Add A Words Book"
                        app:fab_colorNormal="@color/colorAccent"
                        app:fab_colorPressed="@color/colorAccentDark" />
                </com.getbase.floatingactionbutton.FloatingActionsMenu>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>